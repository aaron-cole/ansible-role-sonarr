#
# Systemd unit file for Sonarr
#

[Unit]
Description=Sonarr Daemon

[Service]
Type=simple
User={{ sonarr_user }}
Group={{ sonarr_group }}
ExecStart=/usr/bin/mono {{ sonarr_base_install_dir }}/Sonarr/Sonarr.exe /data={{ sonarr_config_dir }}
Restart=always
RestartSec=15
TimeoutStopSec=20

[Install]
WantedBy=multi-user.target
